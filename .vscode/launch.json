    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Debug Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8001",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
